<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="user-scalable=no,width=device-width,initial-scale=1.0,maximum-scale=1.0">

    <title>Hockey Restful API - JSON</title>


    <style type="text/css">
        body {
            background-color: #f8f8f8;
        }

        img {
            height: 148px;
            width: 158px;
            margin: 0 auto;
        }

        .hockey-team div.inner {
            min-height: 350px;
            border: 1px solid #d0d0d0;
            padding: 1em;
            border-radius: 8px;
            box-shadow: 0px 0px 5px 0px #ccc;
            background-color: white;
            margin: 1em 0;
        }

        div.inner:hover {
            border: 1px solid #cccfff;
            box-shadow: 0px 0px 5px 0px #cccfff;
            cursor: pointer;
        }
    </style>
</head>

<body data-ng-app="hockey" ng-controller="hockeyCtrl">

    @RenderBody()

</body>


<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
<script src="~/lib/angularjs/angular-resource.min.js"></script>
<script src="~/lib/angularjs/App.js"></script>
<script src="~/lib/angularjs/services.js"></script>
<script src="~/lib/angularjs/hockeyCtrl.js"></script>

</html>


